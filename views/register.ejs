<% include partials/header.ejs %> <% include partials/fnavbar.ejs %> <% include
partials/footer.ejs %>
<link type="text/css" rel="stylesheet" href="/css/register.css">
<script src="/js/register.js" type="text/javascript"></script>
<script>

</script>
<br />

<div id="reg" class="row mt-5">
  <div class="col-md-6 m-auto">
    <div id="crd" class="card card-body">
      <h1 class="text-center mb-3">Register</h1>
      <form method="POST">
        <div class="form-group">
          <label for="name">Name</label><span id="error-name"></span>
          <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>" />
        </div>
        <div class="form-group">
          <label for="email">Email</label><span id="error-email"></span>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>
        <div class="form-group">
          <label for="password">Password</label><span id="error-password"></span>
          <input type="password" id="password" name="password" class="form-control" placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>" />
        </div>
        <button type="submit" class="btn btn-primary btn-block" onclick="handleSignUp()">
          Register
        </button>
      </form>
      <p class="lead mt-4"><a href="/login"></a></p>
    </div>
  </div>
</div>


<% include partials/footer.ejs %>